.cards
  container()
  display: flex
  flex-wrap: wrap
  justify-content space-between
  padding 47px 0 67px
  +media(1200px)
    padding 0
    justify-content center
    align-items center
    flex-direction: column

  &--heading
    text-shadow 0 1px 0 $black
    color $white
    font-family $headingFont
    font-size 36px
    font-weight 400
    display block
    width 100%
    text-align center
    margin-bottom 23px

.card
  width 312px
  height 432px
  background $lightGray
  position absolute
  left 4px
  top 4px
  z-index 1
  border-radius: 0 0 10px 10px
  padding 20px 0 0 45px
  transition: $middle
  &::after
    content ''
    display block
    position absolute
    right 0
    top -40px
    width 272px
    height 40px
    background $lightGray
    border-radius: 0 10px 0 0
    z-index 1
  &::before
    content ''
    display block
    position absolute
    left 0
    top -40px
    border: 20px solid transparent
    border-right: 20px solid $lightGray
    border-bottom: 20px solid $lightGray
    z-index 1

  &--border
    width 320px
    height 440px
    margin 35px 0
    position relative
    transition .5s ease-in-out all
    cursor pointer
    z-index 0
    border-radius: 0 0 12px 12px
    +media(1200px)
      margin-bottom 60px
    &::after
      content ''
      display block
      position absolute
      right 0
      top -40px
      width 280px
      height 45px
      transition .5s ease-in-out all
      z-index 0
      border-radius: 0 12px 0 0
    &::before
      content ''
      display block
      position absolute
      left 0
      top -40px
      transition .5s ease-in-out all
      z-index 0

  &--description
    width 100%
    height 24px
    overflow hidden
    &--inner
      transition: $fast
    &__default
      color $darkGray

  &--content
    width: 100%
    height: calc(100% + 40px)
    position: absolute
    left: 0
    top: -41px
    z-index 2
    padding 16px 0 0 45px

  &--heading
    color $black
    font-family $boldFont
    font-size 48px
    line-height 1.2
    margin-left: -3px
    margin-top: 2px
    letter-spacing: 0.1px
    &__taste
      font-size: 24px
      display block
      margin-left 2px
      margin-top -3px

  &--set
    color $darkGray
    font-size 14px
    padding-top 13px
    &--item
      display block
      line-height 1.3
  
  &--size
    color $white
    font-size: 41px
    line-height 1
    width 81px
    height 81px
    border-radius: 50%
    display flex
    flex-direction: column
    justify-content center
    align-items center
    transition: $middle
    position absolute
    right 12px
    bottom 10px
    &__weight
      display block
      font-size: 21px

  &--img
    position absolute
    left 0
    bottom -1px
    width 320px
    height 273px

  &--after
    position absolute
    left 0
    right 0
    bottom -30px
    margin 0 auto
    color $white
    text-shadow 0 1px 0 $black
    font-size 13px
    line-height 16px
    text-align center
    height 16px
    width 100%
    overflow hidden
    &__disabled
      color $yellow
    &--inner
      display block
      transition $middle
      text-shadow 0 1px 0 $black
  &--buy
    color $blue
    border-bottom 1px dashed $blue
    transition: $middle

.checkbox
  display none

  & + .card--border
    background $blue
    &::after
      background $blue
    &::before
      border: 20px solid transparent
      border-right: 20px solid $blue
      border-bottom: 20px solid $blue
    .card--size
      background $blue
    &:hover
      background $lightBlue
      &::after
        background $lightBlue
      &::before
        border-right: 20px solid $lightBlue
        border-bottom: 20px solid $lightBlue
      .card--size
        background $lightBlue
      .card--buy
        color $lightBlue

  &:checked 
    & + .card--border
      background $pink
      &::after
        background $pink
      &::before
        border: 20px solid transparent
        border-right: 20px solid $pink
        border-bottom: 20px solid $pink
      .card--size
        background $pink
      .card--after--inner
        transform: translateY(-16px)
      &:hover
        background $b_pink
        &::after
          background $b_pink
        &::before
          border-right: 20px solid $b_pink
          border-bottom: 20px solid $b_pink
        .card--size
          background $b_pink
        .card--description--inner
          transform: translateY(-24px)
          color $b_pink

  &:disabled 
    & + .card--border
      cursor default
      background $gray
      &::after
        background $gray
      &::before
        border: 20px solid transparent
        border-right: 20px solid $gray
        border-bottom: 20px solid $gray
      .card--size
        background $gray
      .card--content
        opacity 0.5
      .card--description,
      .card--heading,
      .card--set
        color $gray